<!DOCTYPE html>
<html lang="en">
<head>
    <title>View Orders</title>
    <link rel="stylesheet" href="/styles/viewOrders.css"> <!-- Link to your CSS file -->
</head>
<body>
    <header>
        <button class="back-btn" onclick="window.location.href='/admin/dashboard'">Back to Dashboard</button>
    </header>

    <h1>View Orders</h1>
    
    <h2>Orders List</h2>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order._id %></td>
                    <td><%= order.name %></td>
                    <td><%= order.address %></td>
                    <td><%= order.phone %></td>
                    <td><%= order.status %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
